@model Message

@{
    ViewData["Title"] = "MessageDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<input type="hidden" asp-for="MessageId" />

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Mesajlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Mesaj Detayları</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            <strong>Gönderen:</strong> @Model.NameSurname
                            <br />
                            <strong>Email:</strong> @Model.Email
                            <br />
                            <strong>Tarih:</strong> @Model.SendDate.ToShortDateString()
                            <br />
                            <strong>Konu:</strong> @Model.Subject
                            <br />
                            <strong>Mesaj:</strong>
                            <br />
                            @Model.MessageDetail
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>