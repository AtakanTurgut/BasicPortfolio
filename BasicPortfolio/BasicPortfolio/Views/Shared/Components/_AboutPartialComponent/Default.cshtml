@model List<About>

<section id="about" class="s-about target-section">
   
    @foreach (var item in Model)
    {
        <div class="row narrow section-intro has-bottom-sep">
            <div class="col-full text-center">
                <h3>Hakkımda</h3>
                <h1>@item.Title</h1>
                <p class="lead">@item.SubDescription</p>
            </div>
        </div>

        <div class="row about-content">

            <div class="col-six tab-full left">
                <h3>@item.DetailsTitle</h3>

                <p>
                    @item.Details
                </p>
            </div>

            @await Component.InvokeAsync("_SkillPartialComponent")

        </div> <!-- end about-content -->
    }

    <div class="row about-content about-content--buttons">

        <div class="col-six tab-full left">
            <a href="#0" class="btn btn--primary full-width">Indirmek istersen CV'm</a>
        </div>
        <div class="col-six tab-full right">
            <a href="#0" class="btn full-width">Bana Ulasın</a>
        </div>

    </div> <!-- end about-content buttons -->
    @await Component.InvokeAsync("_ExperiencePartialComponent")
    <!-- end about-content timeline -->

</section>